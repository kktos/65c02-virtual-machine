{
	"$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",

	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 180,
		"attributePosition": "auto"
	},

	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},

	"overrides": [
		{
			"includes": ["**/*.vue"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					},
					"style": { "useImportType": "off" }
				}
			}
		}
	]
}
